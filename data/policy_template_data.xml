<!-- restart_approval_ok -->
<record id="policy_template_{model_name:replace dot with underscore}_restart_approval" model="policy.template_detail">
    <field name="template_id" ref="policy_template_{model_name:replace dot with underscore}" />
    <field
        name="field_id"
        search="[('model_id.model','=','{model_name}'),('name','=','restart_approval_ok')]"
    />
    <field name="restrict_state" eval="1" />
    <field
        name="state_ids"
        search="[('field_id.model_id.model','=','{model_name}'),('value','in',['confirm','reject'])]"
    />
    <field name="restrict_user" eval="1" />
    <field name="computation_method">use_group</field>
    <field
        name="group_ids"
        eval="[(6,0,[ref('{model_name:replace dot with underscore}_validator_group')])]"
    />
    <field name="restrict_additional" eval="1" />
    <field name="additional_python_code">result = False
if not document.approval_template_id:
    result = True</field>
</record>

