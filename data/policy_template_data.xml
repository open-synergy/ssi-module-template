<odoo>
<data noupdate="1">
<record id="policy_template_{model_name:replace dot with underscore}" model="policy.template">
    <field name="name">Standard</field>
    <field name="model_id" ref="{module_name}.model_{model_name:replace dot with underscore}" />
    <field
        name="state_field_id"
        search="[('model_id.model','=','{model_name}'),('name','=','state')]"
    />
    <field name="sequence" eval="100" />
    <field name="python_code">result=True</field>
</record>

<!-- confirm_ok -->
<record id="policy_template_{model_name:replace dot with underscore}_confirm" model="policy.template_detail">
    <field name="template_id" ref="policy_template_{model_name:replace dot with underscore}" />
    <field
        name="field_id"
        search="[('model_id.model','=','{model_name}'),('name','=','confirm_ok')]"
    />
    <field name="restrict_state" eval="1" />
    <field
        name="state_ids"
        search="[('field_id.model_id.model','=','{model_name}'),('value','=','draft')]"
    />
    <field name="restrict_user" eval="1" />
    <field name="computation_method">use_group</field>
    <field
        name="group_ids"
        eval="[(6,0,[ref('{model_name:replace dot with underscore}_user_group')])]"
    />
    <field name="restrict_additional" eval="0" />
</record>

<!-- approve_ok -->
<record id="policy_template_{model_name:replace dot with underscore}_approve" model="policy.template_detail">
    <field name="template_id" ref="policy_template_{model_name:replace dot with underscore}" />
    <field
        name="field_id"
        search="[('model_id.model','=','{model_name}'),('name','=','approve_ok')]"
    />
    <field name="restrict_state" eval="1" />
    <field
        name="state_ids"
        search="[('field_id.model_id.model','=','{model_name}'),('value','=','confirm')]"
    />
    <field name="restrict_user" eval="0" />
    <field name="restrict_additional" eval="1" />
    <field name="additional_python_code">result = False
if env.user.id in document.active_approver_user_ids.ids:
    result = True</field>
</record>

