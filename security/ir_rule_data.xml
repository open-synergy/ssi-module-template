<odoo>
    <record id="{model_name:replace dot with underscore}_internal_user_rule" model="ir.rule">
        <field name="name">{model_description} - Internal Users</field>
        <field name="model_id" ref="model_{model_name:replace dot with underscore}" />
        <field name="groups" eval="[(4, ref('base.group_user'))]" />
        <field name="domain_force">[('user_id','=',user.id)]</field>
        <field name="perm_unlink" eval="1" />
        <field name="perm_write" eval="1" />
        <field name="perm_read" eval="1" />
        <field name="perm_create" eval="1" />
    </record>

    <record id="{model_name:replace dot with underscore}_company_rule" model="ir.rule">
        <field name="name">{model_description} - Responsible to company data</field>
        <field name="model_id" ref="model_{model_name:replace dot with underscore}" />
        <field name="groups" eval="[(4, ref('{model_name:replace dot with underscore}_company_group'))]" />
        <field name="domain_force">[('company_id','=',user.company_id.id)]</field>
        <field name="perm_unlink" eval="1" />
        <field name="perm_write" eval="1" />
        <field name="perm_read" eval="1" />
        <field name="perm_create" eval="1" />
    </record>

    <record id="{model_name:replace dot with underscore}_company_child_rule" model="ir.rule">
        <field name="name">{model_description} - Company and All Child Companies</field>
        <field name="model_id" ref="model_{model_name:replace dot with underscore}" />
        <field name="groups" eval="[(4, ref('{model_name:replace dot with underscore}_company_child_group'))]" />
        <field name="domain_force">[('company_id','child_of',user.company_id.id)]</field>
        <field name="perm_unlink" eval="1" />
        <field name="perm_write" eval="1" />
        <field name="perm_read" eval="1" />
        <field name="perm_create" eval="1" />
    </record>

    <record id="{model_name:replace dot with underscore}_all_rule" model="ir.rule">
        <field name="name">{model_description} - All</field>
        <field name="model_id" ref="model_{model_name:replace dot with underscore}" />
        <field name="groups" eval="[(4, ref('{model_name:replace dot with underscore}_all_group'))]" />
        <field name="domain_force">[(1,'=',1)]</field>
        <field name="perm_unlink" eval="1" />
        <field name="perm_write" eval="1" />
        <field name="perm_read" eval="1" />
        <field name="perm_create" eval="1" />
    </record>
</odoo>
